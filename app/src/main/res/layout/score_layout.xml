<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/medal1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/guld" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/medal1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/medal1"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/medal2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/medal1"
        app:srcCompat="@drawable/silver" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/medal2"
        android:layout_below="@+id/medal1"
        android:layout_toEndOf="@+id/medal2"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/medal3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player2"
        app:srcCompat="@drawable/brons" />

    <TextView
        android:id="@+id/player3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/medal3"
        android:layout_below="@+id/player2"
        android:layout_toEndOf="@+id/medal3"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/medal4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player3"
        app:srcCompat="@drawable/tornado" />

    <TextView
        android:id="@+id/player4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/medal4"
        android:layout_below="@+id/player3"
        android:layout_toEndOf="@+id/medal4"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player4"
        android:text="close" />
</RelativeLayout>